<div class="page-header">
  <h1>Add Picture</h1>
</div>

<% if @picture.errors.any? %>
  <% @picture.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_picture" class="form-horizontal">
  <!-- Label and input for source -->
  <div class="form-group">
    <label for="source" class="col-sm-2 control-label">
      Source
    </label>
    <div class="col-sm-10">
      <input type="text" id="source" name="source" placeholder="Source" class="form-control" value="<%= @picture.source %>">
    </div>
  </div>

  <!-- Label and input for caption -->
  <div class="form-group">
    <label for="caption" class="col-sm-2 control-label">
      Caption
    </label>
    <div class="col-sm-10">
      <textarea id="caption" name="caption" placeholder="Caption" class="form-control" rows="3"><%= @picture.caption %></textarea>
    </div>
  </div>

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Picture" class="btn btn-primary">
    </div>
  </div>
</form>
